{%- comment %}

  Graphic Cover
  ------------------------------------------------------------------------------

  Usage:

  {% render 'graphic-cover',
             image: { image } - optional
             image_mobile: { image } - optional
             video: { video } - optional
             loading: { string } - optional
             fetch_priority: { boolean } - optional
             image_sizes: { string } - optional             
  %}
{% endcomment -%}

<div class="graphic-cover">
  {% if video != nil %}
    <div class="h-full w-full" data-component="graphic-cover-video">
      {% if image != blank %}
        {% assign poster = image | image_url: width: 1600 %}
        {{ video | video_tag: muted: true, playsinline: true, autoplay: true, loop: true, image_size: '1600x', poster: poster }}
      {% else %}
        {{ video | video_tag: muted: true, playsinline: true, autoplay: true, loop: true, image_size: '1600x' }}
      {% endif %}
    </div>
  {% endif %}

  {% if image != blank %}
    {% render 'image-responsive'
              image: image,
              image_mobile: image_mobile,
              loading: loading,
              fetch_priority: fetch_priority,
              sizes: image_sizes
    %}
  {% endif %}
</div>