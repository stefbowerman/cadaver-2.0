<style>
  {%- capture content -%}
    @font-face {
      font-family: 'Font Name';
        src: url("{{ 'Font-File.woff' | asset_url }}") format('woff'),
            url("{{ 'Font-File.woff2' | asset_url }}") format('woff2');
      font-weight: 400;
      font-style: normal;
      font-display: swap;
    }

    @font-face {
      font-family: 'Font Name';
        src: url("{{ 'Font-FileBold.woff' | asset_url }}") format('woff'),
            url("{{ 'Font-FileBold.woff2' | asset_url }}") format('woff2');
      font-weight: 700;
      font-style: normal;
      font-display: swap;
    }
  {%- endcapture -%}

  {{ content | strip_newlines | strip }}
</style>
