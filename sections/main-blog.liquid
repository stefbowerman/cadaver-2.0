{% paginate blog.articles by 36 %}
  <section data-section-id="{{ section.id }}" data-section-type="blog">
    <div class="layout-content-wrapper">
      <div class="container">
        <div class="article-grid" data-grid>
          {% for article in blog.articles %}
            <div data-grid-item>
              {% render 'article-card',
                        article: article
              %}
            </div>
          {% endfor %}
        </div>
      </div>

      {% if paginate.next.is_link %}
        <a
          href="/blogs/{{ blog.handle }}?page={{ paginate.current_page | plus: 1 }}"
          style="display: none"
          data-next-page
        >
          {{ paginate.next.title }}
        </a>
      {% endif %}
    </div>
  </section>
{% endpaginate %}

{% schema %}
{
  "name": "Blog - Main",
  "settings": [

  ]
}
{% endschema %}