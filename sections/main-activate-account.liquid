<section
  data-section-id="{{ section.id }}"
  data-section-type="reset-password"
>
  <div class="container">
    {% render 'section-header',
              title: 'Activate Account',
              title_tag: 'h1'
    %}

    <div class="mx-auto" style="max-width: 560px;">
      <p class="text-center">Create your password to activate your account.</p>

      {% form 'activate_customer_password' %}

        <p>{{ form.errors | default_errors }}</p>
        
        <div class="form-group">
          <label for="customer-password">Password</label>
          <div class="form-control">
            <input
              type="password"
              value=""
              name="customer[password]"
              id="customer-password"
            >
          </div>
        </div>

        <div class="form-group">
          <label for="customer-password-confirmation">Password Confirm</label>
          <div class="form-control">
            <input
              type="password"
              value=""
              name="customer[password_confirmation]"
              id="customer-password-confirmation"
            >
          </div>
        </div>

        <div class="form-group">
          <input type="submit" class="btn" value="{{ 'customer.activate_account.submit' | t }}">
        </div>

        <div class="form-group">
          <input type="submit" class="btn" name="decline" value="{{ 'customer.activate_account.cancel' | t }}">  
        </div>
      {% endform %}
    </div>
  </div>
</section>