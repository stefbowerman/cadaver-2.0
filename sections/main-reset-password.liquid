<section data-section-type="reset-password">
  <div class="container">
    {% render 'section-header',
              title: 'Reset Password',
              title_tag: 'h1'
    %}

    <div class="mx-auto" style="max-width: 560px;">
      {% form 'reset_customer_password' %}

        {% comment %} <p>Enter a new password for {{ email }}</p> {% endcomment %}
      
        <p>{{ form.errors | default_errors }}</p>

        <div class="form-group">
          <label for="ResetPassword">Password</label>

          <div class="form-control">              
            <input
              type="password"
              name="customer[password]"
              id="ResetPassword"
              value=""
              {% if form.errors contains 'password' %}
                aria-invalid="true"
              {% endif %}       
            >
          </div>
        </div>

        <div class="form-group">
          <label for="ResetPassword-Confirmation">Confirm Password</label>

          <div class="form-control">              
            <input
              type="password"
              name="customer[password_confirmation]"
              id="ResetPassword-Confirmation"
              value=""
              {% if form.errors contains 'password_confirmation' %}
                aria-invalid="true"
              {% endif %}       
            >
          </div>
        </div>         
      
        <div class="form-group">
          <button type="submit" class="btn btn-block btn-primary">Submit</button>
        </div>
      {% endform %}
    </div>
  </div>
</section>