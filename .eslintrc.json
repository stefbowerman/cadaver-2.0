{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "requireConfigFile": false,
    "babelOptions": {
      "presets": ["@babel/preset-env"]
    }
  },
  "rules": {
    "no-unused-vars": ["warn", {
      "args": "none"
    }],
    "no-useless-escape": "off",
    "no-console": ["warn", {
      "allow": ["warn", "error"]
    }],
    "no-undef": "error",
    "brace-style": ["warn", "stroustrup"],
    "arrow-body-style": "off",
    "arrow-parens": [0, "as-needed"],
    "no-unused-expressions": ["error", {
      "allowShortCircuit": true,
      "allowTernary": true
    }]
  },
  "globals": {
    "window": "readonly",
    "document": "readonly",
    "console": "readonly",
    "app": "readonly",
    "Shopify": "readonly"
  }
} 